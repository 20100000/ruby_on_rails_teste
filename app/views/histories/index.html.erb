<%- model_class = History -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_history_path,
            :class => 'btn btn-primary' %>
<div class="row">
  <div class="col-lg-3">
    <h3 class="text-center text-primary">pending</h3>
    <% @pending.each do |history| %>
      <div class="card" style="width: 18rem; border: #666666 1px solid">
        <div class="card-body">
          <h5 class="card-title"><%= history.name %></h5>
          <!--          <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>-->
          <!--          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>-->
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      history_path(history), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_history_path(history), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      history_path(history),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </div>
      </div>
    <% end %>
  </div>
